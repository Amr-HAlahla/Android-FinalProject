<!-- button_secondary_dark.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#757575" /> <!-- Darker shade for button when pressed -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#616161" /> <!-- Secondary dark color -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
