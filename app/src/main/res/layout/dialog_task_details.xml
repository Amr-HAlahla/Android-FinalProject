<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/TaskDetailsDialogBackgroundStyle">

    <!-- Label: Dialog Title -->
    <TextView
        android:id="@+id/dialog_label"
        style="@style/TaskDetailsDialogTitleTextViewStyle"
        android:text="Task Details" />

    <!-- Task Title -->
    <TextView
        android:id="@+id/task_title"
        style="@style/TaskDetailsDialogTextViewStyle"
        android:text="Task Title"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Task Description -->
    <TextView
        android:id="@+id/task_description"
        style="@style/TaskDetailsDialogTextViewStyle"
        android:layout_marginTop="8dp"
        android:text="Task Description" />

    <!-- Task Due Date -->
    <TextView
        android:id="@+id/task_due_date"
        style="@style/TaskDetailsDialogTextViewStyle"
        android:layout_marginTop="8dp"
        android:text="Due Date: 2024-12-05" />

    <!-- Task Due Time -->
    <TextView
        android:id="@+id/task_due_time"
        style="@style/TaskDetailsDialogTextViewStyle"
        android:layout_marginTop="8dp"
        android:text="Due Time: 10:00 AM" />

    <!-- Task Priority -->
    <TextView
        android:id="@+id/task_priority"
        style="@style/TaskDetailsDialogTextViewStyle"
        android:layout_marginTop="8dp"
        android:text="Priority: High" />

    <!-- Task Status -->
    <TextView
        android:id="@+id/task_status"
        style="@style/TaskDetailsDialogTextViewStyle"
        android:layout_marginTop="8dp"
        android:text="Status: Incomplete" />

    <!-- Close Button -->
    <Button
        android:id="@+id/close_button"
        style="@style/TaskDetailsDialogButtonStyle"
        android:text="Close" />
</LinearLayout>
