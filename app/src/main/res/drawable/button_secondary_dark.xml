<!-- button_primary_dark.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#1E88E5" /> <!-- Darker shade for button when pressed -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#1565C0" /> <!-- Primary dark color -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
